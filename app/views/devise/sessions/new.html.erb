<div class="devise-header">
  <%= link_to root_path do%>
    <%= image_tag "logo.png", class:"logo"%>
  <% end %>
</div>

<div class="devise-container">
  <div class="devise-title">ログイン</div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-box">
      <div class="form-group">
        <%= f.label :"■メールアドレス（半角英数字128文字以内）" %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "  例） homehome@home.jp", autocomplete: "email" %>
      </div>
      <div class="form-group">
        <%= f.label :"■パスワード（半角英数字 8文字〜12文字）" %><br />
        <%= f.password_field :password, placeholder: " ●●●●●●●●", autocomplete: "current-password" %>
      </div>
      <div><%= f.submit "ログイン" ,class:"form-btn"%></div>
      <div class="password-reset">パスワードを忘れた方は、<%= link_to "こちら", "#" %></div>
    </div>
  <% end %>
</div> 
<div class="devise-space"></div>

<%= render "shared/footer"%>
