<div class="devise-header">
  <%= link_to root_path do%>
    <%= image_tag "logo.png", class:"logo"%>
  <% end %>
</div>
<div class="devise-container">
  <div class="devise-title">会員登録</div>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <div class="form-box">
      <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :"■ニックネーム（10文字以内）" %><br/>
          <%= f.text_field :nickname, placeholder: "  例） ホムホム" %>
        </div>
        <div class="form-group">
          <%= f.label :"■メールアドレス（半角英数字128文字以内）" %><br />
          <%= f.email_field :email, placeholder: "  例） homehome@home.jp" %>
        </div>
        <div class="form-group">
          <%= f.label :"■パスワード（半角英数字 8文字〜12文字）" %>
          <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, placeholder: " ●●●●●●●●", autocomplete: "off" %>
        </div>
        <div class="form-group">
          <%= f.label :"■パスワード 確認用" %><br />
          <%= f.password_field :password_confirmation, placeholder: " ●●●●●●●●", autocomplete: "off" %>
        </div>
        <div><%= f.submit "新規登録" ,class:"form-btn"%></div>
      </div>
    </div>
  <% end %>
</div>

<%= render "shared/footer"%>